@using DiplomaManagement.Services;
@using DiplomaManagement.Interfaces
@using DiplomaManagement.ExtensionMethods

@model IEnumerable<DiplomaManagement.Entities.Institute>
@inject INotificationService NotificationService

@{
    ViewData["Title"] = @Html.Translate("institutes");
    var errorMessage = NotificationService.GetNotification($"ErrorMessage_{User.Identity.Name}");

    PagingService pager = new PagingService();
    int pageNumber = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNumber = pager.CurrentPage;
    }

    PagerViewModel pagerViewModel = new PagerViewModel
    {
        Pager = pager,
        ControllerName = "Institute",
        ActionName = "Index"
    };
}

<h1>@Html.Translate("list-of-all-institutes")</h1>

@if (!string.IsNullOrEmpty(errorMessage))
{
    var toastModel = new DiplomaManagement.Models.ToastNotificationViewModel
    {
        Title = "Warning",
        Message = errorMessage,
        Class = "bg-danger"
    };

    @await Html.PartialAsync("_ToastNotificationPartial", toastModel)
}

<p>
    <a asp-action="Create">@Html.Translate("create-new-record")</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            @Html.Translate("search-by-phrase") <input type="text" name="searchString" value="@ViewBag.CurrentFilter" />
            <input type="submit" value="@Html.Translate("search")" class="btn btn-default" /> |
            <a asp-action="Index">@Html.Translate("back-to-full-list")</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSortParam" asp-route-currentFilter="@ViewBag.currentFilter">@Html.Translate("name")</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.SiteSortParam" asp-route-currentFilter="@ViewBag.currentFilter">@Html.Translate("site-address")</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.StreetSortParam" asp-route-currentFilter="@ViewBag.currentFilter">@Html.Translate("street")</a>
            </th>
            <th>
                @Html.Translate("city")
            </th>
            <th>
                @Html.Translate("post-code")
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.EmailSortParam" asp-route-currentFilter="@ViewBag.currentFilter">@Html.Translate("institute-email")</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SiteAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Html.Translate("edit")</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@Html.Translate("details")</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@Html.Translate("delete")</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<partial name="_PagerPartial" model="@pagerViewModel" />
