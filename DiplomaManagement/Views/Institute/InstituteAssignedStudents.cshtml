@using DiplomaManagement.Services;
@using DiplomaManagement.Interfaces

@model IEnumerable<DiplomaManagement.Entities.Student>
@inject INotificationService NotificationService

@{
    ViewData["Title"] = "Index";
    var errorMessage = NotificationService.GetNotification($"ErrorMessage_{User.Identity.Name}");

    PagingService pager = new PagingService();
    int pageNumber = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNumber = pager.CurrentPage;
    }

    PagerViewModel pagerViewModel = new PagerViewModel
    {
        Pager = pager,
        ControllerName = "Institute",
        ActionName = "InstituteAssignedStudents"
    };
}

<h1>@Localizer["students-of-institute"]</h1>

@if (!string.IsNullOrEmpty(errorMessage))
{
    var toastModel = new DiplomaManagement.Models.ToastNotificationViewModel
    {
        Title = "Warning",
        Message = errorMessage,
        Class = "bg-danger"
    };

    @section ToastNotification {
        @await Html.PartialAsync("_ToastNotificationPartial", toastModel)
    }
}

@if (Model != null && Model.Any()) 
{
    <form asp-action="InstituteAssignedStudents" method="get">
        <div class="form-actions no-color">
            <p>
                Find by name: <input type="text" name="searchString" value="@ViewBag.CurrentFilter" />
                <input type="submit" value="@Localizer["search"]" class="btn btn-default" /> |
                <a asp-action="InstituteAssignedStudents">@Localizer["back-to-full-list"]</a>
            </p>
        </div>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>
                    <a asp-action="InstituteAssignedStudents" asp-route-sortOrder="@ViewBag.IdSortParam" asp-route-currentFilter="@ViewBag.currentFilter">Id</a>
                </th>
                <th>
                    <a asp-action="InstituteAssignedStudents" asp-route-sortOrder="@ViewBag.StudentSortParam" asp-route-currentFilter="@ViewBag.currentFilter">@Localizer["student-name-surname"]</a>
                </th>
                <th>
                    <a asp-action="InstituteAssignedStudents" asp-route-sortOrder="@ViewBag.EmailSortParam" asp-route-currentFilter="@ViewBag.currentFilter">@Localizer["email-address"]</a>
                </th>
                <th>
                    <a asp-action="InstituteAssignedStudents" asp-route-sortOrder="@ViewBag.ThesisTitleSortParam" asp-route-currentFilter="@ViewBag.currentFilter">@Localizer["thesis-title"]</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @($"{item.User.FirstName} {item.User.LastName}")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
                @if (item.Thesis != null) {
                    <td>
                        @Html.DisplayFor(modelItem => item.Thesis.Title)
                    </td>
                    <td>
                        <a asp-action="PromoterDetails" asp-controller="Thesis" asp-route-id="@item.Thesis.Id">@Localizer["thesis-details"]</a>
                    </td>
                } else {
                    <td colspan="2" class="text-center">
                        @Localizer["no-thesis-assigned"]
                    </td>
                }
            </tr>
        }
        </tbody>
    </table>
}
else 
{
    <div class="alert alert-primary d-flex align-items-center" role="alert">
        <partial name="Icons/_WarningIconPartial" />
        <div>
            @Localizer["no-students-in-institute"]
        </div>
    </div>
}

<partial name="_PagerPartial" model="@pagerViewModel" />
