@using DiplomaManagement.Entities
@model IEnumerable<DiplomaManagement.Entities.Thesis>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-action="SeminarLeaderTheses" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="SeminarLeaderTheses">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="SeminarLeaderTheses" asp-route-sortOrder="@ViewData["TitleSortParm"]">@Html.DisplayNameFor(model => model.Title)</a>
            </th>
            <th>
                <a asp-action="SeminarLeaderTheses" asp-route-sortOrder="@ViewData["NameSortParm"]">Promoter</a>
            </th>
            <th>
                <a asp-action="SeminarLeaderTheses" asp-route-sortOrder="@ViewData["DateSortParm"]">Student</a>
            </th>
            <th>
                <a asp-action="SeminarLeaderTheses" asp-route-sortOrder="@ViewData["StatusSortParm"]">@Html.DisplayNameFor(model => model.Status)</a>
                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @($"{item.Promoter.User.FirstName} {item.Promoter.User.LastName}")
                </td>
                <td>
                    @($"{(item.StudentId != null ? item.Student.User.FirstName + " " + item.Student.User.LastName : "--")}")
                </td>
                <td>
                    <span class="status @item.Status.ToString().ToLower()">@Html.DisplayFor(modelItem => item.Status)</span>
                </td>
                <td>
                    <a asp-action="PromoterDetails" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
