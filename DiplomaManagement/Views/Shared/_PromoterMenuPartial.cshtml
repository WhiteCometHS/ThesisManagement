@using Microsoft.AspNetCore.Identity
@using DiplomaManagement.Data
@using DiplomaManagement.Repositories

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject ThesisRepository ThesisRepository

@{
    ApplicationUser? user = await UserManager.GetUserAsync(User);
}

@if (SignInManager.IsSignedIn(User) && user != null && await UserManager.IsInRoleAsync(user, "Promoter"))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Thesis" asp-action="Index">Your theses</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Enrollment" asp-action="ActiveEnrollments">Enrollments</a>
    </li>
    @if (await ThesisRepository.isPromoterHasActiveThesisAsync(user.Id))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Thesis" asp-action="ActiveTheses">Active theses</a>
        </li>
    }
    @if (await UserManager.IsInRoleAsync(user, "SeminarLeader")) 
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Thesis" asp-action="SeminarLeaderTheses">Theses management</a>
        </li>
    }
}