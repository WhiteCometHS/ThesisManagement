@using Microsoft.AspNetCore.Identity
@using DiplomaManagement.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
}

@if (SignInManager.IsSignedIn(User) && await UserManager.IsInRoleAsync(user, "Promoter"))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Thesis" asp-action="Index">Theses</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Enrollment" asp-action="ActiveEnrollments">Active enrollments</a>
    </li>
}