@model DiplomaManagement.Services.PagingService

<div class="container">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Thesis" asp-action="SeminarLeaderTheses" asp-route-sortOrder="@ViewBag.CurrentSort" asp-route-currentFilter="@ViewBag.CurrentFilter" asp-route-page="1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Thesis" asp-action="SeminarLeaderTheses" asp-route-sortOrder="@ViewBag.CurrentSort" asp-route-currentFilter="@ViewBag.CurrentFilter" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (var pageNumber = Model.StartPage; pageNumber <= Model.EndPage; pageNumber++)
            {
                <li class="page-item @(pageNumber == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-asp-controller="Thesis" asp-action="SeminarLeaderTheses" asp-route-sortOrder="@ViewBag.CurrentSort" asp-route-currentFilter="@ViewBag.CurrentFilter" asp-route-page="@pageNumber">@pageNumber</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Thesis" asp-action="SeminarLeaderTheses" asp-route-sortOrder="@ViewBag.CurrentSort" asp-route-currentFilter="@ViewBag.CurrentFilter" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Thesis" asp-action="SeminarLeaderTheses" asp-route-sortOrder="@ViewBag.CurrentSort" asp-route-currentFilter="@ViewBag.CurrentFilter"  asp-route-page="@Model.TotalPages">Last</a>
                </li>
            }
        </ul>
    }
</div>